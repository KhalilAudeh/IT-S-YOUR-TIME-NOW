<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context="com.example.srourcompu.itsyourtimenow.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon"/>

        <TextView
            android:id="@+id/logoText"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No matter who you are, **IT'S YOUR TIME, NOW** will let you find yourself."
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/linearLayout4">

        <TextView
            android:id="@+id/B1Text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Already a member?"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="20dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/signIn_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:background="@color/fbutton_color_turquoise"
            android:text="Sign In" />

        <TextView
            android:id="@+id/B2Text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Not a Member?"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:textSize="20dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/signUp_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@color/fbutton_color_turquoise"
            android:text="Create Account" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="100dp">

        <Button
            android:id="@+id/fb_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/facebook_icon"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/instagram_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/instagram_icon"
            android:layout_marginRight="30dp" />

        <Button
            android:id="@+id/twitter_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/twitter_icon"/>

    </LinearLayout>

    <Button
        android:id="@+id/About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/linearLayout4"
        android:layout_marginBottom="37dp"
        android:layout_marginStart="11dp"
        android:background="@null"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:text="About Me" />

    <Button
        android:id="@+id/Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/About"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic|bold"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:text="Contact Me" />


</RelativeLayout>
