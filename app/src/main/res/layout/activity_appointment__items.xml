<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="com.example.srourcompu.itsyourtimenow.Appointment_Items">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/thumbnail_image"
        android:layout_toLeftOf="@+id/active_image"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/recycle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/recycle_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Date"
            android:textSize="18dp"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/recycle_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Pending"
            android:textSize="18dp"
            android:textColor="#ffff"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/active_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/linearLayout3"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:src="@drawable/bell_icon" />


</RelativeLayout>
