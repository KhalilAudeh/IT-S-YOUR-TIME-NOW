<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_background"
    tools:context="com.example.srourcompu.itsyourtimenow.Home">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Health"
        android:layout_marginTop="12dp"
        android:text="Welcome :)"
        android:textColor="@color/fbutton_color_sun_flower"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/Beauty"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/Health"
        android:text="Take Care of Your Beauty"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cub_border_radius="0dp"
        app:cub_color="#ff6666" />

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/Health"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignTop="@+id/Beauty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp"
        android:text="Take Care of Your Health"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cub_border_radius="0dp"
        app:cub_color="#3399ff" />

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/Booking"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignBottom="@+id/Feedback"
        android:layout_marginBottom="38dp"
        android:layout_toEndOf="@+id/Health"
        android:text="Book Your Appointment"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cub_border_radius="0dp"
        app:cub_color="#ff80df" />

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/Feedback"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/alert_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="Feedback"
        android:textAllCaps="false"
        android:textColor="#003300"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cub_border_radius="0dp"
        app:cub_color="#80ff80" />

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/alert_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/Booking"
        android:layout_alignTop="@+id/notification_button"
        android:onClick="Alert"
        android:text="Alert"
        android:textAllCaps="false"
        android:textColor="#003300"
        android:textSize="18dp"
        android:textStyle="bold"
        app:cub_border_radius="0dp"
        app:cub_color="#80ff80" />

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/notification_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Health"
        android:layout_marginBottom="14dp"
        android:onClick="showNotification"
        android:text="Notification"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cub_border_radius="0dp"
        app:cub_color="#ff6666" />

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notification_button"
        android:layout_alignParentStart="true"
        android:text="STOP"
        android:onClick="Stop"/>

</RelativeLayout>
