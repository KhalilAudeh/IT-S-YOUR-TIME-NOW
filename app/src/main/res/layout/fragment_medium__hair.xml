<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srourcompu.itsyourtimenow.Medium_Hair">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/section_hair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="12dp"
                android:text="HairStyle Techniques YOU can do
                     ALONE !!"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hair1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/hairstyle2"/>

            <TextView
                android:id="@+id/hair2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hairstyle2"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_below="@id/imageView4"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
