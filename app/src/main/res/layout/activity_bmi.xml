<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srourcompu.itsyourtimenow.BMI">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginLeft="60dp"
                app:srcCompat="@drawable/bmi" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="25dp"
                android:text="\t\t\t\t\t\t\t\t\t\t\t\t\tWEIGHT"
                android:textColor="@color/pink"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/weight_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="70dp"
                android:ems="10"
                android:inputType="number|numberDecimal"
                android:text=""
                android:hint="in Kg"
                android:textStyle="italic"
                android:textColorHint="@color/gray" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="25dp"
                android:text="\t\t\t\t\t\t\t\t\t\t\t\t\t\t\tHEIGHT"
                android:textColor="@color/pink"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/height_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:ems="10"
                android:inputType="numberDecimal|number"
                android:text=""
                android:hint="in cm"
                android:textStyle="italic"
                android:textColorHint="@color/gray" />

            <Button
                android:id="@+id/result_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="26dp"
                android:background="@color/colorAccent"
                android:onClick="BMI_Result"
                android:text="BMI\nResult"
                android:textColor="#ffff"
                android:textSize="15dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:hint="Press HERE for DATE!!"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="RESULTS:\n"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/saved_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="47dp"
                android:text="HISTORY"
                android:textSize="18dp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:text="SAVE" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
