<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srourcompu.itsyourtimenow.Forget_Password">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Forget Your Password?
        Don't Worry !!"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/fbutton_color_turquoise"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="We just need your registered Phone Number to
        sent you password reset instructions."
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/Phone_Nb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="number"
        android:text="Phone Number"
        android:textColor="@color/gray"
        android:textStyle="italic" />

    <Button
        android:id="@+id/reset_pwd_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Phone_Nb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@color/fbutton_color_turquoise"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/verification_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Phone_Nb"
        android:layout_below="@+id/reset_pwd_btn"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/gray"
        android:textStyle="italic"
        android:text="Verification Code" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@color/colorPrimaryDark"
        android:text="done"
        android:textStyle="italic"
        android:textColor="#ffff"/>

    <Button
        android:id="@+id/sign_out_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:background="@color/black"
        android:text="Sign Out"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="18dp"
        android:textStyle="italic" />


</RelativeLayout>
