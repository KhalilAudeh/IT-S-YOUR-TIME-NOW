<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in"
    tools:context="com.example.srourcompu.itsyourtimenow.Hair_Page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="120dp"
            android:text=" Choose YOUR \n\t Category in \n\tHAIR STYLES"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/hair_spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="40dp"/>

        <FrameLayout
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/makeup_spinner"
            android:layout_marginTop="46dp">

        </FrameLayout>


        <TextView
            android:id="@+id/section_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/hair3"
            android:text="Homemade Tips to Take Care of\n\t\t\t\t\t\t\t\tYOUR Hair !!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="@color/colorAccent"
            android:text="Loss of Hair"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:textAllCaps="false"
            android:background="@color/fbutton_color_turquoise"
            android:text="Split Ends"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:background="@color/colorAccent"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:text="Dandruff" />

        <Button
            android:id="@+id/button6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="200dp"
            android:textAllCaps="false"
            android:background="@color/fbutton_color_turquoise"
            android:text="Head Lice"
            android:textStyle="bold"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>